
@{
   
    ViewData["Title"] = "Index";
}

@model IEnumerable<MovieWithAllDto>

   
        <div class="table p-3">
            <div class="row p-3"><h2>@ViewBag.Title</h2><h5 class="p-1 pl-4">@Html.ActionLink("Ekle","Save",null,htmlAttributes:new {@class = "btn btn-info"})</h5></div>
            <table class="table table-hover" style=" table-layout: fixed; word-wrap: break-word;">
                <thead class="table-header">
                    <tr>
                        <th> @Html.DisplayNameFor(a=>a.Image)</th>
                        <th> @Html.DisplayNameFor(a=>a.Title)</th>
                        <th> @Html.DisplayNameFor(a=>a.Descr)</th>
                        <th> @Html.DisplayNameFor(a=>a.IsActive)</th>
                        <th> @Html.DisplayNameFor(a=>a.CreatedDate)</th>
                        <th> @Html.DisplayNameFor(a=>a.Categories)</th>
                        <th> @Html.DisplayNameFor(a=>a.Genres)</th>
                        <th> @Html.DisplayNameFor(a=>a.Actors)</th>
                    </tr>
                </thead>
                <tbody>
             @foreach(var item in Model)
                     {
                    <tr>
                         <td><img src="@item.Image" style="height:120px;width:85px"/></td>
                        <td>@item.Title</td>
                        <td>@item.Descr</td>
                        <td>@item.IsActive</td>
                        <td>@item.CreatedDate</td> 
                    <td>
                    @foreach (var category in item.Categories)
                    {
                      @category.Name<br />
                    }
                    </td>
                      <td>
                    @foreach (var genre in item.Genres)
                    {
                      @genre.Name<br />
                    }
                    </td> 
                    <td>
                    @foreach (var actor in item.Actors)
                    {
                      @actor.Name<br />
                    }
                    </td>
                    <td>@Html.ActionLink("Güncelle","Edit",new{id=item.Id},htmlAttributes:new {@class = "btn btn-success"}) | @Html.ActionLink("Sil","Delete",new{id=item.Id},htmlAttributes:new {@class = "btn btn-danger"})<td/>
                    </tr>
                      }
                </tbody>
            </table>
        </div>
       

